<h3><%=category.name%></h3>
<div class="category-description">
    <%=category.description%>
</div>

<%if category.categories.empty?%>
     <div class = "products-container">
        <%= render :partial => "products/product", :collection => category.products._enabled %>
     </div>
<%else%>
    <%= render :partial => "catalog/category", :collection => @categories %>
<%end%>